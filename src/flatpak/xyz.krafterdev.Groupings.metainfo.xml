<component type="desktop-application">
  <id>xyz.krafterdev.Groupings</id>
  
  <name>Groupings</name>
  <summary>Chat on GroupMe</summary>
  
  <metadata_license>CC-BY-SA-4.0</metadata_license>
  <project_license>MPL-2.0</project_license>

  <developer id="xyz.krafterdev">
    <name>Krafter</name>
  </developer>
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <provides>
    <mediatype>x-scheme-handler/groupings</mediatype>
  </provides>
  
  <description>
    <p>
      Groupings is an Open Source client for the proprietary messaging platform GroupMe, designed with elegance, simplicity, and Mobile Linux in mind.
    </p>
  </description>
  
  <launchable type="desktop-id">xyz.krafterdev.Groupings.desktop</launchable>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-info">mild</content_attribute>
    <content_attribute id="social-location">intense</content_attribute>
    <content_attribute id="social-contacts">intense</content_attribute>
  </content_rating>

